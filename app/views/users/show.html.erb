<div class="row">
  <div class="col-md-8">
    <p><%= current_user.email %></p>
    <p>Joined: <%= time_ago_in_words(@user.created_at) %> ago</p>
  </div>
<div class="col-md-8">

<h1>My To-Do List</h1>
<div class='new-comment'; style='margin-top: 15px;'>
    <%= render partial: 'items/form', locals: { item: @item } %>
</div>

<table class="table table-hover">
  <tr>
    <th>Item</th>
    <th>Days Left</th>
  </tr>
  <%= render @current_user.items %>
</table>

</div>