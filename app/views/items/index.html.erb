<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <h2 class="media-heading">Hello <%= @user.email %>!</h2>
      </div>
    </div>
  </div>
</div> 
<div class="col-md-10">
  <h2>My To-Do List</h2>

    <% @items.each do |item| %>
      <%= item.name %>
      <%= item.days_left %>
      <%= link_to "complete", item, method: :delete, class: 'glyphicon glyphicon-ok', data: { confirm: 'Are you sure you want to delete this to-do?'} %>
    <% end %>
  <div class='new-item'>
    <%= render partial: 'items/form', locals: { item: Item.new } %>
  </div>